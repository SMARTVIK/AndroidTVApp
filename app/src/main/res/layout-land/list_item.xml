<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/root_layout"
        android:background="@color/first_item_background"
        android:layout_height="78dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_assembly"
            android:layout_width="0dp"
            android:gravity="center"
            android:textColor="@color/first_item_text_color"
            android:layout_marginStart="@dimen/dimen_4"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/assembly_line"
            android:textSize="@dimen/header_text_size" />

        <View
            android:layout_marginEnd="@dimen/dimen_4"
            android:layout_marginStart="@dimen/dimen_4"
            android:layout_width="@dimen/divider_width"
            android:layout_height="match_parent"
            android:background="@color/inactive_item_background" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_sku_code"
            android:layout_width="0dp"
            android:textColor="@color/first_item_text_color"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/sku_code"
            android:textSize="@dimen/header_text_size" />

        <View
            android:layout_width="@dimen/divider_width"
            android:layout_height="match_parent"
            android:background="@color/inactive_item_background" />


        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_target"
            android:layout_width="0dp"
            android:textColor="@color/first_item_text_color"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/target"
            android:textSize="@dimen/header_text_size" />

        <View
            android:layout_width="@dimen/divider_width"
            android:layout_height="match_parent"
            android:background="@color/inactive_item_background" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_actual"
            android:layout_width="0dp"
            android:textColor="@color/first_item_text_color"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/actual"
            android:gravity="center"
            android:textSize="@dimen/header_text_size" />

        <View
            android:layout_width="@dimen/divider_width"
            android:layout_height="match_parent"
            android:background="@color/inactive_item_background" />


        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_line"
            android:layout_width="0dp"
            android:textColor="@color/first_item_text_color"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/line_status"
            android:textSize="@dimen/header_text_size" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:background="@color/inactive_item_background" />


</LinearLayout>